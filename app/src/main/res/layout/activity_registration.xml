<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.munichats.munichats.Login.Registration"
    android:background="@drawable/imlogin">


    <EditText
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/white_boder"
        android:hint=" Name"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="182dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnDangnhap"
        android:layout_alignStart="@+id/btnDangnhap" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/white_boder"
        android:hint="Email ID"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />
    <EditText
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/white_boder"
        android:hint="Phone No."
        android:textSize="20dp"

        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
    <EditText
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/white_boder"
        android:hint="Password"
        android:textSize="20dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/btnDangnhap"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:background="@drawable/violet_border"
        android:text="Đăng Nhập"
        android:textAllCaps="false"
        android:textColor="#6D69DF"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>
